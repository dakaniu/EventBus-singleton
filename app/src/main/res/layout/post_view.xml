<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF45"
    android:orientation="vertical">

    <Button
        android:id="@+id/post_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post event"
        android:textSize="20sp" />

    <Button
        android:id="@+id/post_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post subThread event"
        android:textSize="20sp" />

    <Button
        android:id="@+id/post_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post sticky event"
        android:textSize="20sp" />
    <Button
        android:id="@+id/post_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post stickysubThread event"
        android:textSize="20sp" />
</LinearLayout>